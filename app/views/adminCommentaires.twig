<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>Le web de Clément - Gestion des commentaires</title>
        <link rel="shortcut icon" type="image/png" href="clementsblog/public/img/roundMe.png"/>
        <!-- Bootstrap core CSS -->
        <link rel="stylesheet" href="clementsblog/public/theme/vendor/bootstrap/css/bootstrap.min.css" >
        <!-- Custom CSS -->
         <link rel="stylesheet" href="clementsblog/public/css/main.css" >
        <!-- Custom fonts for this template -->
        <link href="clementsblog/public/theme/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
        <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
        <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
        <!-- Custom styles for this template -->
        <link href="clementsblog/public/theme/css/clean-blog.css" rel="stylesheet">
    </head>
    <body>
        <!-- Menu -->
        <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
            <div class="container">
                <img class="rounded-circle photoClement" src="clementsblog/public/img/roundMe.png">
                <div class="nomPrenom text-center">Clément <br> Thuet</div>
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menu
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/clementsblog/">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/clementsblog/home/articles/1">Les articles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/clementsblog/home/quisuisje">Qui suis-je ?</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/clementsblog/home/contact">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Page Header -->
        <header class="masthead" style="background-image: url('clementsblog/public/theme/img/coding-dark-bg.jpg')">
            <div class="overlay"></div>
            <div class="container">
                <div class="row">
                    <div class="col-lg-8 col-md-10 mx-auto">
                        <div class="site-heading">
                            <h1>Le web de Clément</h1>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        {% if session.logged == true %}
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-xl-12">
                        <h1 class='text-center title'>Gestion des commentaires</h1>
                        {%if session.flashmessage is not empty%}
                            <div class="alert alert-success" role="alert">
                                {{session.flashmessage}}
                            </div>
                        {%endif%}
                        <table class='table text-center table-responsive'>
                            <thead class='thead-dark'>
                                <tr>
                                    <th scope="col">Article</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Aperçu</th>
                                    <th scope="col">Statut</th>
                                    <th scope="col">Modérer</th>
                                    <th scope="col">Supprimer</th>
                                </tr>
                            </thead>
                            <tbody>
                                {%for commentaire in commentaires %}
                                    <tr>
                                        <td>{{commentaire.article.titre|truncate(50)}}</td>
                                        <td>{{commentaire.date|date('d-m-y')}}</td>
                                        <td>{{commentaire.contenu|truncate(50)}}</td>
                                        <td>{{commentaire.valide ? 'Validé' : 'En attente de validation'}}</td>
                                        <td><a href="/clementsblog/admin/modifierCommentaire/{{commentaire.id}}"><i class="far fa-edit"></i></a></td>
                                        <td><a href="/clementsblog/admin/supprimerCommentaire/{{commentaire.id}}"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
                                    </tr>
                                {%endfor%}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <hr>
            <!-- Footer -->
            <footer>
                <div class="container">
                    <div class="row">
                        <div class="col-lg-8 col-md-10 mx-auto">
                            <ul class="list-inline text-center">
                                <li class="list-inline-item">
                                    <a href="/clementsblog/admin/dashboard">
                                        <span class="fa-stack fa-lg">
                                            <i class="fas fa-circle fa-stack-2x"></i>
                                            <i class="fas fa-home fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </a>
                                    <span style='display:block;'>Tableau de bord</span>
                                </li>
                                <li class="list-inline-item">
                                    <a href="/clementsblog/admin/deconnexion">
                                        <span class="fa-stack fa-lg">
                                          <i class="fas fa-circle fa-stack-2x"></i>
                                          <i class="fas fa-sign-out-alt fa-stack-1x fa-inverse"></i>
                                        </span>
                                    </a>
                                    <span style='display:block;'>Déconnexion</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </footer>
        {% else %}
            <div class='container'>
                <div class='row'>
                    <div class='col-lg-8 col-md-10 mx-auto text-center'>
                        <h1 class='title'>Vous devez être connecté pour accèder à cette page</h1>
                        <a href="/clementsblog/admin/login"><input type='button' value='Se connecter'></a>
                    </div>
                </div>
            </div>
            
        {% endif %}
        <!-- Bootstrap core JavaScript-->
        <script src="clementsblog/public/theme/vendor/jquery/jquery.min.js"></script>
        <script src="clementsblog/public/theme/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <!-- Custom scripts for this template-->
        <script src="clementsblog/public/theme/js/clean-blog.min.js"></script> 
    </body>
</html>
